<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonapi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormUserActivity">

    <Button
        android:id="@+id/btnOpenCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Camara" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Galeria" />

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/MostrarForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mostar" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:ems="10"
        android:hint="nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/editUsernamee"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="fecha"
        android:inputType="text" />

    <EditText
        android:id="@+id/editEmanil"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:ems="10"
        android:hint="comentarios"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegisterCorrecto" />


</LinearLayout>